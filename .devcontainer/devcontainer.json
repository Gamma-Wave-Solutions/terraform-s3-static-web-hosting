{
  "image": "ghcr.io/gamma-wave-solutions/devcontainer_base:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform"
      ]
    }
  },
  "postAttachCommand": [
    "fish",
    "-c",
    "mkdir ~/.terraform.d; echo \"$TERRAFORM_CREDS\" | base64 -d > ~/.terraform.d/credentials.tfrc.json"
  ]
}
  
